<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgournd_login"
    android:padding="16dp"
    tools:context=".ResultPage">

    <!-- Confetti View -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />


    <!-- Main Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Quiz Results Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Results"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="12dp" />

            <!-- Score Circle -->
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_score_circle">

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textOutOf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Out of 15"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Points Earned -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have earned"
                android:textColor="#888"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/textPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 Points"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFA000" />

            <!-- Time -->
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You took 11 min 59 sec to complete the quiz"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- Leaderboard Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See where you stand"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp" />

            <!-- Leaderboard List -->
            <LinearLayout android:id="@+id/leaderboardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <include layout="@layout/item_leaderboard" />
                <include layout="@layout/item_leaderboard" />
                <include layout="@layout/item_leaderboard" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp">

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Trang chủ"
                    android:layout_marginEnd="12dp"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Thoát"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
