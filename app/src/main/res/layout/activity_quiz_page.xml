<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgournd_login"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/orange_500"
        android:backgroundTint="@color/orange_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>


    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Game"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/orange_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info Box -->
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/orange_50"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Time: 60"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/orange_700"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_correct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correct: 0"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/green_700"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wrong: 0"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red_700"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ScrollView cho Question + Options -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Question Box -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question Text Here"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="24dp"
                android:background="@color/white"
                android:elevation="6dp"/>

            <!-- Option Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_option1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Option 1"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange_500"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_option2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Option 2"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange_500"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_option3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Option 3"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange_500"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_option4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Option 4"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange_500"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Finish & Next buttons -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="FINISH GAME"
            android:backgroundTint="@color/red_700"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="NEXT QUESTION"
            android:backgroundTint="@color/orange_700"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
