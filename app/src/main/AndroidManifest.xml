<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame">
        <activity
            android:name=".Leaderboard"
            android:exported="false" />
        <activity
            android:name=".ResultPage"
            android:exported="false" />
        <activity
            android:name=".Quiz_Page"
            android:exported="false" />
        <activity
            android:name=".Forgot_Password"
            android:exported="false" />
        <activity
            android:name=".Sign_Up_Page"
            android:exported="false" /> <!-- Splash Screen -->
        <activity
            android:name=".Splash_Screen"
            android:exported="true"
            android:theme="@style/Theme.QuizGame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginPage"
            android:exported="false"
            android:theme="@style/Theme.Login" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.QuizGame" />
    </application>

</manifest>